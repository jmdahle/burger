<div class='row'>
    <!-- undevoured burgers -->
    <div class='col s12 m12 l6'>
        <h4>Available Burgers</h4>
        <ul id='burger-menu' class='collection'>
            <!-- available burgers go here -->
        </ul>
    </div>
    <!-- devoured burgers -->
    <div class='col s12 m12 l6'>
        <h4>Burgers You Missed</h4>
        <ul id='burgers-eaten' class='collection'>
            <!-- devoured burgers go here -->
        </ul>
    </div>
</div>
<div class='row'>
    <div class='col s12 m12 l12'>
        <h4>Make a Burger!</h4>
        <form id='new-burger-form'>
            <div class='input-field col s6'>
            <input id='burger-name' type='text' class='validate'>
                <label for='burger-name'>Burger Name</label>
                <button class='btn waves-effect waves-light' type='submit' name='action'>Submit</button>
            </div>
        </form>
    </div>
</div>
